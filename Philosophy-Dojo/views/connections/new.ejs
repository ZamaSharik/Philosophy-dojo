<%- include('../partials/header.ejs') %>

    <div class="footer-class" style="background-color: #b54442;">
        <div class="footer"><h2>New Meetup Suggestion</h2></div>
        <div class="footer contact meetup-info">
            <form action = '/connections' method="POST">
                <label for="topicName">📖 Topic Name:</label>
                <input type="text" id="topicName" name="topic" required><br>

                <label for="titleName">📓  Title:</label>
                <input type="text" id="titleName" name="title" required><br>
    
                <label for="host">👨🏻‍🏫👩🏻‍🏫  Host:</label>
                <input type="text" id="host"  name="hostname" required><br>
    
                <label for="date">📅  Date:</label>
                <input type="date" id="date"  name="date" required><br><br>
                
                <label for="startTime">⏰ Start Time:</label>
                <input type="time" id="startTime" name="startTime" required><br><br>

                <label for="endTime">🕰️ End Time:</label>
                <input type="time" id="endTime" name="endTime" required><br><br>
                
                <label for="details">📑  Details:</label>
                <input type="text" id="details" name="description" required minlength="10"><br>
    
                <label for="picture">📷 Image Link:</label>
                <input type="text" id="picture" name="image" required><br>

                <label for="place">🚩  Place:</label>
                <input type="text" id="place" name="location" required><br>
                
                <button class="btnn" type="submit">Create Meetup</button>
            </form>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>